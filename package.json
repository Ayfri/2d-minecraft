{
	"name": "minecraft-2d",
	"version": "0.1.0",
	"description": "This is a 2d-minecraft like game (more like Terraria).",
	"main": "src/main.ts",
	"dependencies": {
		"@pixi/app": "^5.3.3",
		"@pixi/filter-outline": "^3.1.1",
		"@pixi/loaders": "^5.3.3",
		"@pixi/sprite": "^5.3.3",
		"@pixi/text": "^5.3.3"
	},
	"devDependencies": {
		"@types/pixi.js": "^5.0.0",
		"copy-webpack-plugin": "^6.1.0",
		"file-loader": "^6.1.0",
		"html-loader": "^1.3.0",
		"html-webpack-plugin": "^4.4.1",
		"prettier": "^2.1.1",
		"source-map-loader": "^1.1.0",
		"ts-loader": "^8.0.3",
		"typescript": "^4.0.2",
		"webpack": "^4.44.2",
		"webpack-cli": "^3.3.12",
		"webpack-dev-server": "^3.11.0"
	},
	"scripts": {
		"build:dev": "webpack --mode development --config webpack.config.js && npm run prettier",
		"build:prod": "webpack --mode production --config webpack.config.js && npm run prettier",
		"prettier": "prettier src package.json webpack.config.js tsconfig.json --write",
		"start": "webpack-dev-server --config webpack.config.js --color && npm run build:prod"
	},
	"author": "Ayfri",
	"license": "ISC",
	"repository": "https://github.com/Ayfri/2d-minecraft",
	"prettier": {
		"arrowParens": "always",
		"endOfLine": "lf",
		"printWidth": 200,
		"quoteProps": "consistent",
		"semi": true,
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "es5",
		"useTabs": true
	}
}
