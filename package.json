{
	"name": "minecraft-2d",
	"version": "0.1.0",
	"description": "This is a 2d-minecraft like game (more like Terraria).",
	"main": "src/main.ts",
	"dependencies": {
		"@pixi/app": "^6.0.1",
		"@pixi/filter-outline": "^3.2.0",
		"@pixi/loaders": "^5.3.6",
		"@pixi/sprite": "^5.3.6",
		"@pixi/text": "^5.3.6",
		"@pixi/unsafe-eval": "^5.3.6",
		"webpack-dev-server": "^3.11.1"
	},
	"devDependencies": {
		"@types/pixi.js": "^5.0.0",
		"copy-webpack-plugin": "^6.4.0",
		"file-loader": "^6.2.0",
		"html-loader": "^1.3.2",
		"html-webpack-plugin": "^4.5.0",
		"http-server": "^0.12.3",
		"prettier": "^2.2.1",
		"source-map-loader": "^1.1.3",
		"ts-loader": "^8.0.7",
		"typescript": "^4.1.4",
		"webpack": "^4.44.2",
		"webpack-cli": "^4.3.0",
		"webpack-dev-server": "^3.11.1"
	},
	"scripts": {
		"build:dev": "webpack --mode development --config webpack.config.js && npm run prettier",
		"build:prod": "webpack --mode production --config webpack.config.js && npm run prettier",
		"prettier": "prettier src package.json webpack.config.js tsconfig.json --write",
		"start": "npm run build:prod && webpack-dev-server --config webpack.config.js",
		"server": "http-server dist --cors --ip-log"
	},
	"author": "Ayfri",
	"license": "ISC",
	"repository": "https://github.com/Ayfri/2d-minecraft",
	"prettier": {
		"arrowParens": "always",
		"endOfLine": "lf",
		"printWidth": 200,
		"quoteProps": "consistent",
		"semi": true,
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "es5",
		"useTabs": true
	}
}
